<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <View android:id="@+id/topSide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueSky"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_above="@id/primeiroBotao" />

    <TextView
        android:id="@+id/rededossaberes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Rede dos Saberes"
        android:textSize="44dp"
        android:textColor="@android:color/white"
        android:paddingTop="20dp"
        android:textAlignment="center"/>

    <Button
        android:contentDescription="@string/botao_tela_inicial"
        android:id="@+id/primeiroBotao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        app:srcCompat="@drawable/button"
        android:onClick="verProjetos"
        android:layout_above="@+id/segundoBotao"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:layout_marginTop="35sp"
        android:text="Ver Projetos"
        android:textSize="19sp"
        android:textColor="@color/blueSky"
        android:layout_marginBottom="25sp"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/segundoBotao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/primeiroBotao"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/button"
        android:contentDescription="@string/botao_tela_inicial"
        app:srcCompat="@drawable/button"
        android:text="Criar Projetos"
        android:onClick="criarProjetos"
        android:textColor="@color/blueSky"
        android:textSize="19sp"
        style="?android:attr/borderlessButtonStyle"/>
    <Button
        android:contentDescription="@string/botao_tela_inicial"
        android:id="@+id/terceiroBotao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/segundoBotao"
        android:layout_below="@+id/segundoBotao"
        android:layout_gravity="center_vertical|center_horizontal"
        app:srcCompat="@drawable/button"
        android:background="@drawable/button"
        android:layout_marginTop="25sp"
        android:text="Sair"
        android:textColor="@color/blueSky"
        android:textSize="19sp"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="sair"/>
    <View
        android:id="@+id/linhaHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/labetinho"
        android:layout_alignParentStart="true"
        android:layout_below="@id/terceiroBotao"
        android:layout_marginTop="32sp"
        app:srcCompat="@drawable/horizontal_line"
        android:background="@color/blueSky"/>
    <ImageView
        android:id="@+id/labetinho"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/lab_betinho" />



</RelativeLayout>
